{
  // Place your settings in this file to overwrite default and user settings.

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "src/**/*.css": { "when": "$(basename).scss" },
    "src/app/**/*.css": { "when": "$(basename).scss" },
    "src/app/**/*.js": { "when": "$(basename).ts" },
    "src/app/**/*.js.map": true
  },
  "files.autoSave": "onFocusChange",
  "prettier.printWidth": 150,
  "editor.formatOnSave": true,
  "editor.fontSize": 14,
  "editor.minimap.enabled": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "workbench.colorCustomizations": {
    "activityBar.background": "#E8333A",
    "titleBar.activeBackground": "#E8333A",
    "statusBar.background": "#E8333A"
  }
}
